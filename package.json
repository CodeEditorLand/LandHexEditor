{
	"name": "hexeditor",
	"displayName": "%name%",
	"version": "0.0.1",
	"private": false,
	"description": "%description%",
	"keywords": [
		"land"
	],
	"homepage": "HTTPS://GitHub.Com/CodeEditorLand/LandHexEditor#readme",
	"bugs": {
		"url": "HTTPS://GitHub.Com/CodeEditorLand/LandHexEditor/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+HTTPS://github.com/CodeEditorLand/LandHexEditor.git"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": {
		"name": "üåÜ‚ÄÅ‚Äî‚ÄÅLand‚ÄÅ‚Äî",
		"email": "Land@PlayForm.Cloud",
		"url": "HTTPS://Land.PlayForm.Cloud"
	},
	"type": "module",
	"main": "./dist/extension.js",
	"browser": "./dist/web/extension.js",
	"scripts": {
		"Document": "Document 'Source/**/*.ts'",
		"compile": "tsc --noEmit && node .esbuild.config.js",
		"prepublishOnly": "Build 'Source/**/*.ts'"
	},
	"contributes": {
		"commands": [
			{
				"category": "%name%",
				"command": "hexEditor.openFile",
				"icon": "$(file-binary)",
				"title": "%hexEditor.openFile%"
			},
			{
				"category": "%name%",
				"command": "hexEditor.goToOffset",
				"title": "%hexEditor.goToOffset%"
			},
			{
				"category": "%name%",
				"command": "hexEditor.selectBetweenOffsets",
				"title": "%hexEditor.selectBetweenOffsets%"
			},
			{
				"category": "%name%",
				"command": "hexEditor.switchEditMode",
				"title": "%hexEditor.switchEditMode%"
			}
		],
		"configuration": [
			{
				"properties": {
					"hexeditor.columnWidth": {
						"default": 16,
						"description": "%hexeditor.columnWidth%",
						"maximum": 512,
						"minimum": 1,
						"type": "integer"
					},
					"hexeditor.dataInspector.autoReveal": {
						"default": true,
						"description": "%hexeditor.dataInspector.autoReveal%",
						"type": "boolean"
					},
					"hexeditor.defaultEndianness": {
						"default": "little",
						"description": "%hexeditor.defaultEndianness%",
						"enum": [
							"little",
							"big"
						],
						"type": "string"
					},
					"hexeditor.inspectorType": {
						"default": "aside",
						"description": "%hexeditor.inspectorType%",
						"enum": [
							"aside",
							"hover",
							"sidebar"
						],
						"type": "string"
					},
					"hexeditor.maxFileSize": {
						"default": 10,
						"description": "%hexeditor.maxFileSize%",
						"minimum": 0,
						"type": "number"
					},
					"hexeditor.showDecodedText": {
						"default": true,
						"description": "%hexeditor.showDecodedText%",
						"type": "boolean"
					},
					"hexeditor.showOpenFileButton": {
						"default": false,
						"description": "%hexeditor.showOpenFileButton%",
						"type": "boolean"
					}
				},
				"title": "%name%"
			}
		],
		"customEditors": [
			{
				"displayName": "%name%",
				"priority": "option",
				"selector": [
					{
						"filenamePattern": "*"
					}
				],
				"viewType": "hexEditor.hexedit"
			}
		],
		"keybindings": [
			{
				"command": "hexEditor.goToOffset",
				"key": "ctrl+g",
				"when": "activeCustomEditorId == hexEditor.hexedit"
			},
			{
				"command": "hexEditor.switchEditMode",
				"key": "Insert",
				"when": "hexEditor:isActive"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "hexEditor.goToOffset",
					"when": "hexEditor:isActive"
				},
				{
					"command": "hexEditor.switchEditMode",
					"when": "hexEditor:isActive"
				}
			],
			"editor/title": [
				{
					"command": "hexEditor.openFile",
					"group": "navigation@1",
					"when": "activeEditor && config.hexeditor.showOpenFileButton"
				}
			]
		},
		"views": {
			"hexExplorer": [
				{
					"id": "hexEditor.dataInspectorView",
					"name": "%dataInspectorView%",
					"type": "webview",
					"when": "hexEditor:showSidebarInspector"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"icon": "panel-icon.svg",
					"id": "hexExplorer",
					"title": "%name%",
					"when": "hexEditor:showSidebarInspector"
				}
			]
		}
	},
	"dependencies": {
		"@popperjs/core": "^2.11.6",
		"cockatiel": "^3.1.2",
		"js-base64": "^3.7.2",
		"recoil": "^0.7.7"
	},
	"devDependencies": {
		"@playform/build": "0.0.7",
		"@playform/document": "0.0.6",
		"@types/chai": "^4.3.0",
		"@types/node": "^18.11.9",
		"chai": "^4.3.4",
		"esbuild": "^0.19.0",
		"esbuild-css-modules-plugin": "^3.1.0",
		"esbuild-plugin-svgr": "^2.1.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"icon": "icon.png",
	"aiKey": "0c6ae279ed8443289764825290e4f9e2-1a736e7c-1324-4338-be46-fc2a58ae4d14-7255",
	"capabilities": {
		"untrustedWorkspaces": {
			"supported": true
		},
		"virtualWorkspaces": true
	},
	"l10n": "./l10n"
}
